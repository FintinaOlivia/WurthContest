@if (AlertModel is not null)
{
    <div class="alert alert-@AlertModel.AlertType" role="alert">
        @AlertModel.Message
        <button type="button" class="btn-close position-absolute end-0" data-bs-dismiss="alert" aria-label="Close" @onclick=@(() => DismissAlertClick.InvokeAsync(AlertModel.Index))></button>
    </div>
}

@code {
    [Parameter]
    public IAlertModel? AlertModel { get; set; }

    [Parameter]
    public EventCallback<int> DismissAlertClick { get; set; }
}
